{
  "name": "reddit-recipes",
  "version": "1.0.0",
  "description": "AI-powered Reddit recipes data parser and analyzer",
  "main": "src/main.ts",
  "scripts": {
    "dev": "tsx src/main.ts",
    "build": "tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test-db": "tsx scripts/test-db.ts",
    "reddit-csv-to-json": "tsx src/utils/reddit_csv_to_json.ts",
    "reddit-csv-to-json-local": "tsx src/utils/reddit_csv_to_json_local.ts",
    "stromberg-csv-to-json": "tsx src/utils/stromberg_csv_to_json.ts",
    "stromberg-csv-to-json-local": "tsx src/utils/stromberg_csv_to_json_local.ts",
    "load-to-db": "tsx src/utils/load_json_to_db.ts",
    "worker": "tsx src/worker.ts",
    "client": "tsx src/client.ts",
    "client:local": "tsx src/client-local.ts",
    "client:local:parallel": "tsx src/client-local-parallel.ts",
    "client:load": "tsx src/client-load-db.ts",
    "sync:search": "tsx src/utils/sync_to_elasticsearch.ts",
    "setup-db": "./scripts/setup-db.sh",
    "docker:start": "docker-compose up -d postgres",
    "docker:start:all": "docker-compose up -d",
    "docker:start:search": "docker-compose up -d elasticsearch kibana",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:logs:search": "docker-compose logs -f elasticsearch",
    "docker:reset": "docker-compose down -v && docker volume rm recipes_postgres_data recipes_elasticsearch_data recipes_pgadmin_data 2>/dev/null || true"
  },
  "keywords": [
    "reddit",
    "recipes",
    "ai",
    "data-parsing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.23",
    "@ai-sdk/google": "^2.0.17",
    "@ai-sdk/openai": "^2.0.42",
    "@anthropic-ai/sdk": "^0.30.1",
    "@elastic/elasticsearch": "^8.11.0",
    "@temporalio/activity": "^1.13.1",
    "@temporalio/client": "^1.13.1",
    "@temporalio/worker": "^1.13.1",
    "@temporalio/workflow": "^1.13.1",
    "@types/pg": "^8.15.5",
    "ai": "^5.0.60",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.3",
    "openai": "^4.42.0",
    "pg": "^8.16.3",
    "ts-node": "^10.9.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
